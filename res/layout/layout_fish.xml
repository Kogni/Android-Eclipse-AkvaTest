                <TextView
                    android:id="@+id/field_KH_optimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </TableRow>

            <TableRow
                android:id="@+id/row_GH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
