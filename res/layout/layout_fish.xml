                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/field_Salinity_optimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
